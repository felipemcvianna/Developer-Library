@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Biblioteca.Models.LoginViewModel


<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <h3 class="card-header text-center">Login</h3>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label">Usuário</label>
                            <input asp-for="Nome" type="text" class="form-control" required>
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Senha</label>
                            <input asp-for="Password" type="password" class="form-control" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" asp-for="RemeberMe">
                            <label class="form-check-label" asp-for="RemeberMe">@Html.DisplayNameFor(m => m.RemeberMe)</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Login</button>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Registrar-se</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
