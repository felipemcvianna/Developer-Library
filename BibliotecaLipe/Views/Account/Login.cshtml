@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Biblioteca.Models.LoginViewModel


<div class="mx-auto py-4 w-25 row">
    <div class="col-md-12 border border-0  border-dark"></div>
    <h3 class="text-center">Login</h3>
    <form method="post">
        <div class="form-group">
            <label asp-for="Nome">Usuario</label>
            <input asp-for="Nome" type="text" class="form-control">
            
        </div>
        <div class="form-group">
            <label asp-for="Password">Senha</label>
            <input asp-for="Password" type="password" class="form-control">
        </div>
        <div class="form-group">
            <div class="form-check">
                <label class="form-check-label" asp-for="RemeberMe">
                    <input class="form-check-input" type="checkbox" asp-for="RemeberMe">
                    @Html.DisplayNameFor(m => m.RemeberMe)
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-success mt-3">Login</button>
        <button asp-controller="Account" asp-action="Register" class="btn btn-primary mt-3">Registrar-se</button>
        
    </form>
</div>