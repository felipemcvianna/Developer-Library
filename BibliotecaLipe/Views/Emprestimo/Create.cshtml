@model BibliotecaLipe.Models.LivroEmprestimoViewModel

<!doctype html>
<html lang="pt-br">
<head>
    <title>Criar Empréstimo</title>
</head>
<body>
<div>
    <div class="text-center">
        <h1>Detalhes do Livro</h1>
        <div>
            <label>Título:</label>
            <span>@Model.Livro.Titulo</span>
        </div>
        <div>
            <label>Autor:</label>
            <span>@Model.Livro.Autor</span>
        </div>
        <div>
            <label>Data de Publicação:</label>
            <span>@Model.Livro.DataPublicacao.ToString("d")</span>
        </div>
        <div>
            <label>ISBN:</label>
            <span>@Model.Livro.ISBN</span>
        </div>
        <hr/>
        <h2>Criar Empréstimo</h2>
        <form asp-action="Create" method="post">
            <input type="hidden" asp-for="Emprestimo.LivroId"/>
            <div>
                <div>
                    <label asp-for="Emprestimo.Status" class="form-label mt-4">Status</label>
                    <select class="form-select" asp-for="Emprestimo.Status">
                        @foreach (var status in Enum.GetValues(typeof(Biblioteca.Models.Enums.Status)))
                        {
                        <option value="@status">@status</option>
                        }
                    </select>
                </div>
                <label asp-for="Emprestimo.DataDevolucao" class="form-label mt-4">Data de Devolução</label>
                <input asp-for="Emprestimo.DataDevolucao" type="date" class="form-control"/>
                <span asp-validation-for="Emprestimo.DataDevolucao" class="text-danger"></span>
            </div>
            <input type="submit" value="Realizar Empréstimo" class="btn btn-success">
        </form>
    </div>
</div>
</body>
</html>
