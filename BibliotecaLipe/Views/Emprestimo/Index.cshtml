                </tr>
                </thead>
                <tbody>
                @foreach (var emprestimo in Model.OrderByDescending(x=> x.DataEmprestimo))
                {
                if (emprestimo.Status == Status.Cancelado)
                {
                <tr>
                    <td>@emprestimo.Livro.Titulo</td>
