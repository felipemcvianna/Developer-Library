@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Biblioteca.Models.Livro>

<!DOCTYPE html>
@{
    ViewData["Title"] = "Livros";
    var topLivros = Model.OrderByDescending(l => l.QuantidadeEmprestado).Take(10);
}
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        .card {
            border: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            cursor: pointer;
        }

        .card-body img {
            object-fit: cover;
            height: 200px;
        }
    </style>
</head>
<body>
<div class="py-2" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
    <h2 class="text-center">LIVROS</h2>
    <div style="display: flex; align-items: center;">
        <input type="text" placeholder="Pesquisar livros..."
               style="padding: 8px; font-size: 16px; border: 1px solid #ccc; border-radius: 4px; width: 300px;">
        <button
            style="padding: 8px 16px; margin-left: 8px; font-size: 16px; background-color: #007bff; color: white; border: none; border-radius: 4px;">
            <i class="bi bi-search"></i>
        </button>
    </div>
</div>
<h3 class="text-center">TOP 10 LIVROS</h3>
<div>
    <section class="py-5">
        <div class="container">
            <div class="row text-center">
                @foreach (var book in topLivros)
                {
                    <div class="col-md-2 mb-4">
                        <div class="card h-100"
                             onclick="location.href='@Url.Action("Details", "Livro", new { id = book.LivroID })'">
                            <div class="card-body">
                                <h5 class="card-title">@book.Titulo</h5>
                                <img src="@book.CaminhoImagem" alt="Capa do livro" class="img-fluid py-2"
                                     style="width: 70%; height: 200px;">
                                <p class="card-text">Autor:</p>
                                <p>@book.Autor</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>
@if (User.IsInRole("Administrador"))
{
    <a class="btn btn-primary" asp-action="Create">Cadastrar</a>
}
</body>
</html>