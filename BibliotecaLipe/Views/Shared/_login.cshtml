@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <a asp-controller="Account" asp-action="Logout" class="nav-item btn btn-light"><i class="bi bi-box-arrow-right"></i></a>
}
else
{
    <a asp-controller="Account" asp-action="Register" class="nav-item btn btn-light">Registrar</a>
    <a asp-controller="Account" asp-action="Login" class="nav-item btn btn-light">Login</a>
}